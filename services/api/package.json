{
    "name": "@zkorum/zkorum-back",
    "version": "1.0.0",
    "description": "ZKorum backend",
    "exports": "./index.js",
    "scripts": {
        "build": "NODE_ENV=production rm -rf dist && tsc --sourceMap -p tsconfig.json",
        "start": "node --loader esm-module-alias/loader --no-warnings dist/index.js",
        "start:dev": "tsx watch src/index.ts",
        "start:dev:capacitor": "MODE=capacitor tsx watch src/index.ts",
        "db:drop": "drizzle-kit drop",
        "db:generate": "drizzle-kit generate:pg && ./scripts/rename_sql_migration_file.sh drizzle/",
        "db:migrate": "docker run --rm --network host -v ${PWD}/database/flyway:/flyway/conf -v ${PWD}/database/flyway:/flyway/sql flyway/flyway migrate",
        "db:undo": "docker run --rm --network host -v ${PWD}/database/flyway:/flyway/conf -v ${PWD}/database/flyway:/flyway/sql flyway/flyway undo",
        "db:sudo:migrate": "sudo docker run --rm --network host -v ${PWD}/database/flyway:/flyway/conf -v ${PWD}/database/flyway:/flyway/sql flyway/flyway  migrate",
        "db:clean": " docker run --rm --network host -v ${PWD}/database/flyway:/flyway/conf -v ${PWD}/database/flyway:/flyway/sql flyway/flyway clean",
        "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "format:check": "prettier . --check",
        "format:write": "prettier . --write",
        "generate-dev-keys": "NODE_OPTIONS=--experimental-vm-modules GENERATE_DEV_KEYS=true jest -t 'generate-dev-keys'",
        "test": "NODE_OPTIONS=--experimental-vm-modules jest",
        "image:build": "docker build -t zkorum-back ."
    },
    "type": "module",
    "engines": {
        "node": ">=16"
    },
    "keywords": [
        "trust-minimized infrastructure",
        "privacy",
        "transparency",
        "freedom",
        "equity",
        "democracy",
        "poll",
        "survey",
        "vote"
    ],
    "author": "Nicolas Gimenez",
    "license": "AGPL3",
    "aliases": {
        "@": "./dist"
    },
    "dependencies": {
        "@aws-sdk/client-ses": "^3.465.0",
        "@docknetwork/crypto-wasm-ts": "^0.40.0",
        "@fastify/auth": "^4.3.0",
        "@fastify/cors": "^8.4.0",
        "@fastify/sensible": "^5.3.0",
        "@fastify/swagger": "^8.12.0",
        "@ucans/ucans": "^0.12.0",
        "cborg": "^4.0.5",
        "dotenv": "^16.3.1",
        "drizzle-orm": "^0.29.3",
        "fastify": "^4.23.2",
        "fastify-type-provider-zod": "^1.1.9",
        "keystore-idb": "^0.15.5",
        "localforage": "^1.10.0",
        "lodash": "^4.17.21",
        "multiformats": "^12.1.3",
        "nodemailer": "^6.9.7",
        "pg": "^8.11.3",
        "postgres": "^3.3.5",
        "python-shell": "^5.0.0",
        "tweetnacl": "^1.0.3",
        "uint8arrays": "^4.0.6",
        "zod": "^3.22.2"
    },
    "devDependencies": {
        "@jest/globals": "^29.7.0",
        "@openapitools/openapi-generator-cli": "^2.7.0",
        "@types/lodash": "^4.14.200",
        "@types/node": "^20.8.0",
        "@types/nodemailer": "^6.4.14",
        "@types/pg": "^8.10.3",
        "@typescript-eslint/eslint-plugin": "^6.7.3",
        "@typescript-eslint/parser": "^6.7.3",
        "drizzle-kit": "^0.20.10",
        "eslint": "^8.50.0",
        "eslint-config-prettier": "^9.0.0",
        "esm-module-alias": "^2.1.0",
        "jest": "^29.7.0",
        "pino-pretty": "^10.2.0",
        "prettier": "^3.0.3",
        "ts-jest": "^29.1.1",
        "tsconfig-paths": "^4.2.0",
        "tsx": "^3.13.0",
        "typescript": "^5.2.2"
    }
}
